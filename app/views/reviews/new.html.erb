<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<div class="container col-4">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5).to_a %>
    <%= f.submit "Create new review", class: "btn btn-primary mt-3" %>
  <% end %>
</div>

<p><%= link_to 'Back to all restaurants', restaurants_path %></p>
